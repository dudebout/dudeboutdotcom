<article .publication>
  <section .title .clearfix>
    <div .btn-group .btn-group-vertical .pull-right>
      <a .btn .btn-custom href="/files/publications/#{ide}.pdf">
        <i .icon-file-alt>
        <span .hidden-phone>PDF
      <button type="button" .btn .btn-custom onclick="$('##{ide}_more').myPlugin('##{ide}_button');" id="#{ide}_button" autocomplete="off">
        <i .icon-info-sign>
        <span .hidden-phone>More
    <div .publication-title>#{title}
    <div .publication-authors>#{authors}
    <div .publication-venue>#{venue}
  <section .collapse ##{ide}_more>
    $maybe repository <- maybeRepository
      <section>
        <h1>
          <a href="#{repository}">Repository
    <section>
      <h1>Abstract
      <p .publication-abstract>#{abstract}
    <section>
      <h1>BibTeX entry
      #{bibtex}
    $maybe copyright <- maybeCopyright
      <section>
        <h1>Copyright
        <p>
          #{copyright}
